---
import { Image } from "astro:assets";
import { WebsiteConfig } from "../config";
import * as m from "../paraglide/messages.js";
---
<div class="p-suru--fan-bottom">
    <div class="row--75-25">
      <div class="col">
        <h1>{WebsiteConfig.siteTitle}</h1>
        <h2>{m.mainBanner_dates()}</h2>
        <h2>{m.mainBanner_venue()}</h2>
        <p>{m.mainBanner_description()}</p>
        <p><small>{WebsiteConfig.mainBanner.showFootnote ? m.mainBanner_footnote :""}</small></p>
        {WebsiteConfig.mainBanner.buttons(Astro.currentLocale ?? "en").map((buttonConfig)=>(
            <a href={buttonConfig.link} target={buttonConfig.target ?? "_self"}>
                <button class={buttonConfig.class} style={{ marginBottom: "0.25rem" }}>
                    {buttonConfig.label}
                </button>
            </a>
        ))}
      </div>
      <div class="col">
        <Image src={WebsiteConfig.mainBanner.logo} decoding="async" loading="lazy"
          style="padding-top: 30px; max-width: 250px;" alt="" width={250}/>
      </div>
    </div>
  </div>